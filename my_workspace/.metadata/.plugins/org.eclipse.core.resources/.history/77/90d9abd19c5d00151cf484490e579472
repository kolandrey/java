package iostream;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.util.Scanner;

import javax.imageio.stream.FileImageInputStream;
import javax.swing.JOptionPane;

public class FileCopy {
	private static final String SEPARATOR = "\r\n";
	public static void copyIO(String pathA, String pathB) throws IOException{
		File file = new File(pathB);
		file.delete();
		file.createNewFile();
		FileWriter writer = new FileWriter(file);
		BufferedReader reader = new BufferedReader(new FileReader(pathA));
		String str = "";
		while (str!=null) {
			str = reader.readLine();
			if (str==null) break;
			writer.write(str + SEPARATOR);
		}
		reader.close();
		writer.close();
	}
	public static void copyNIO(String pathA, String pathB){
		Path from = Paths.get(pathA);
		Path to = Paths.get(pathB);
		try {
			Files.copy(from, to);
		} catch (IOException e) {
			JOptionPane.showMessageDialog(null, "Файл уже существует");
		}
	}
	
	@SuppressWarnings("deprecation")
	public static void copyStream(String pathA, String pathB) throws IOException{
		FileInputStream fis = new FileInputStream(new File(pathA));
		DataInputStream dis = new DataInputStream(fis);
		FileOutputStream fos = new FileOutputStream(new File(pathB));
		DataOutputStream dos = new DataOutputStream(fos);
		String str = "";
		if ((str = dis.readLine())!= null){
			dos.writeBytes(str);
		}
		fos.close();
		dos.close();
		dis.close();
	}
	
	private static Scanner scn;
	
	public static void copyScanner(String pathA, String pathB) throws IOException{
		FileWriter fr = new FileWriter(new File(pathB));
		try {
			scn = new Scanner(new File(pathA));
		} catch (FileNotFoundException e) {
			JOptionPane.showMessageDialog(null, "Файл не найден");
		} 
		while (scn.hasNext()){
			fr.write(scn.next());
		}
		fr.close();
	}
}
