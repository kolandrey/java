package threads;

public class ThreadTest {

	public static void main(String[] args) throws InterruptedException {
		// new NewThread("первый");
		// new NewThread("второй");
		NewThread nt1 = new NewThread("первый");

		if (nt1.t.isAlive()) {
			nt1.t.join();
		} else {
			NewThread nt2 = new NewThread("второй");
		}
	}

}
