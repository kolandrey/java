package ua.kh.lessons.lesson3.dz;

public class Circle {
	private int x, y, rad;

	public int getX() {
		return this.x;
	}

	public int getY() {
		return this.y;
	}

	public int getRad() {
		return this.rad;
	}

	public void setX(int x) {
		this.x = x;
	}

	public void setY(int y) {
		this.y = y;
	}

	public void setRad(int rad) {
		this.rad = rad;
	}

	public Circle() {
		this.x = 10;
		this.y = 10;
		this.rad = 5;
	}

	public Circle(int x, int y, int rad) {
		this.x = x;
		this.y = y;
		this.rad = rad;
	}

	public double area(int rad) {
		double area = 3.14 * rad * rad;
		return area;
	}

	public double circumference(int rad) {
		double circumference = 2 * 3.14 * rad;
		return circumference;
	}

	public void print() {
		System.out
				.println("x=" + this.x + " y=" + this.y + " rad=" + this.rad);
	}
	
	public boolean isInCircle (int x, int y){
		boolean in;
		double ab = Math.sqrt(((x-this.x)*(x-this.x))+((y-this.y)*(y-this.y)));
		if (ab>=this.rad){
			in = false;
		} else {
			in = true;
		}
		return in;
	}
}
