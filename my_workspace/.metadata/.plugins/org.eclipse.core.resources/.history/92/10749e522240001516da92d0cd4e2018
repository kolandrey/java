package ua.kh.lessons.lesson6.dz;

public class Rectangle extends Figure {
	private int side;

	public int getSide() {
		return side;
	}

	public void setSide(int side) {
		this.side = side;
	}

	public Rectangle() {
		init();
	}

	public Rectangle(int x, int y, int side) {
		super(x, y);
		this.side = side;
	}
	
	private void init(){
		setX(10);
		setY(10);
		setSide(5);
	}

	@Override
	public String toString() {
		return "Rectangle, side=" + side + super.toString()
				+ "]";
	}

	@Override
	public double area() {
		return side * side;
	}

}
