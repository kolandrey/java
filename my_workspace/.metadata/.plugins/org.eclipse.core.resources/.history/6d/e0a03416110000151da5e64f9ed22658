/* —оздайте массив из всех чЄтных чисел от 2 до 20 и выведите 
 * элементы массива на экран сначала в строку, отдел€€ один 
 * элемент от другого пробелом, а затем в столбик (отдел€€ один 
 * элемент от другого началом новой строки). ѕеред созданием 
 * массива подумайте, какого он будет размера.
 */

package kostin.tema8;

public class Task8_1 {

	public static void main(String[] args) {
		int[] num = new int[10];
		for (int i = 0; i < num.length; i++) {
			num[i] = (i+1)* 2;
			System.out.println(num[i]);
		}
		
		for (int i = 0; i < num.length; i++) {
			num[i] = (i+1)* 2;
			System.out.print(num[i]+ " ");
		}
		
	}
}